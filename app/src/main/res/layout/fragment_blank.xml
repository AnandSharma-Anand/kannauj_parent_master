<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAttendance"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:elevation="2dp"
        app:cardBackgroundColor="#1a1a1a"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="350dp" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ivPic"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:id="@+id/tvName"
                android:letterSpacing="0.1"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/ivPic"
                android:layout_centerHorizontal="true"
                android:text="Alice Cooper"
                android:textSize="17sp"
                android:textColor="#ddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvFathersName"
                android:letterSpacing="0.1"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tvName"
                android:layout_centerHorizontal="true"
                android:text="Alan Cooper"
                android:textSize="14sp"
                android:textColor="#868686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvRollNo"
                android:letterSpacing="0.1"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tvFathersName"
                android:layout_centerHorizontal="true"
                android:text="Roll No. 1"
                android:textSize="16sp"
                android:textColor="#868686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tvAbsent"
                    android:letterSpacing="0.1"
                    android:paddingTop="12dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="40dp"
                    android:text="Absent"
                    android:textSize="16sp"
                    android:textColor="#ff6969"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPresent"
                    android:letterSpacing="0.1"
                    android:paddingTop="12dp"
                    android:paddingBottom="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_alignParentRight="true"
                    android:text="Present"
                    android:textSize="16sp"
                    android:textColor="#76ff73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:id="@+id/line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/tvPresent"
                    android:background="#a9a9a9"
                    android:layout_width="70dp"
                    android:layout_height="1.5dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
